{
    // 默认 C++ 编译器
    "C_Cpp.default.compilerPath": "C:/msys64/ucrt64/bin/g++.exe",

    // 配置 MSYS2 UCRT64 bash
    "terminal.integrated.profiles.windows": {
        "MSYS2 UCRT64": {
            "path": "C:/msys64/usr/bin/bash.exe",
            "args": ["--login", "-i"],   // login 模式，加载 alias
            "env": {
                "MSYSTEM": "UCRT64",
                "CHERE_INVOKING": "1"   // 保持当前目录，不跳 home
            }
        }
    },
    "terminal.integrated.defaultProfile.windows": "MSYS2 UCRT64",

    // 新终端打开时进入 workspace 根目录
    "terminal.integrated.cwd": "${workspaceFolder}",

    // 关闭多行粘贴警告（可选）
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "files.associations": {
        "array": "cpp",
